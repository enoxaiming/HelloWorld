<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/hw_activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <android.opengl.GLSurfaceView
                android:id="@+id/hw_activity_main_GLSURFACEVIEW"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        <RelativeLayout
                android:id="@+id/hw_activity_main_CONTAINER"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
    </RelativeLayout>

    <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:id="@+id/hw_activity_main_TARGET_IMAGEVIEW"
            app:srcCompat="@drawable/hh_target"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="24dp"
            android:visibility="gone"
            android:elevation="100dp"/>

    <RelativeLayout
            android:clickable="true"
            android:id="@+id/hw_activity_main_CONNECT_JOYSTICK_CONTAINER"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp">
        <ImageView
                android:id="@+id/imageView1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/hw_console_device"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imageView1"
                android:id="@+id/hw_activity_main_CONNECT_JOYSTIC_TEXT"
                android:textColor="#FFFFFF"
                android:text="@string/hw_connect_joystic"
                android:layout_marginLeft="10dp"
                android:textSize="15dp"
                android:layout_marginRight="5dp"
                android:layout_centerVertical="true"/>
    </RelativeLayout>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="16dp"
            android:id="@+id/hw_activity_main_TIP_TEXT"
            android:text="@string/hw_main_tip_i_text"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="24dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"/>
</RelativeLayout>
